<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.feng.DemoTest.InfoActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_info_head">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_centerInParent="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_arrow_left_light_blue_a100_36dp"
        android:id="@+id/iv_info_return"
        android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@id/rl_info_head"
        android:id="@+id/v_info_v1"
        android:layout_marginTop="16dp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_info_v1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/rl_info_account"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_account_circle_orange_200_36dp"
            android:id="@+id/iv_info_account"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13726123456"
            android:layout_toRightOf="@+id/iv_info_account"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@id/rl_info_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_info_account"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/rl_info_comment"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_info_outline_pink_200_36dp"
            android:id="@+id/iv_info_info"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_toRightOf="@+id/iv_info_info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@id/rl_info_comment"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <com.dd.CircularProgressButton
        android:id="@+id/btn_info_logout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        app:cpb_selectorIdle="@drawable/idle_state_selector"
        android:textSize="18sp"
        app:cpb_textIdle="退出当前账号"
        app:cpb_textError="退出当前帐号"
        android:layout_alignParentBottom="true"
        app:cpb_cornerRadius="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cpb_colorProgress="#00ffffff"
        app:cpb_colorIndicator= "#fd4444"

        />
</RelativeLayout>
