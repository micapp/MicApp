<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.feng.DemoTest.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#85000000"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_login_login"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@+id/tv_login_login"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/v_login_line"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/v_login_line"
        android:orientation="horizontal"
        android:id="@+id/lo_login_l1"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_phone_android_green_200_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColorHint="#40000000"
            android:background="@null"
            android:id="@+id/et_login_phone"

             />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.dd.CircularProgressButton
            android:id="@+id/btn_login_getcode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:cpb_textComplete="已发送"
            app:cpb_textError="Error"
            app:cpb_textIdle="获取验证码"
            app:cpb_colorProgress="#00ffffff"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l1"
        android:id="@+id/v_login_v2"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/v_login_v2"
        android:orientation="horizontal"
        android:id="@+id/lo_login_l2"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_lock_outline_orange_200_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:textColorHint="#40000000"
            android:background="@null"
            android:id="@+id/et_login_code"
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l2"
        android:id="@+id/v_login_v3"/>
    <com.dd.CircularProgressButton
        android:id="@+id/btn_login_login"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cpb_textComplete="登录成功"
        app:cpb_textError="登录失败，请重试"
        app:cpb_textIdle="登录"
        android:layout_alignParentBottom="true"
        app:cpb_cornerRadius="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cpb_colorProgress="#00ffffff"
        />



</RelativeLayout>
