<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.feng.DemoTest.ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_changepassword_head">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_light_blue_a100_36dp"
            android:id="@+id/iv_changepassword_return"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@+id/rl_changepassword_head"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/v_login_line"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/v_login_line"
        android:orientation="horizontal"
        android:id="@+id/lo_login_l1"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_lock_open_orange_200_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="旧密码"
                android:textColorHint="#40000000"
                android:background="@null"
                android:id="@+id/et_changepassword_oldpwd"
                android:singleLine="true"
                android:inputType="textPassword"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l1"
        android:id="@+id/v_login_v2"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/v_login_v2"
        android:orientation="horizontal"
        android:id="@+id/lo_login_l2"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_lock_outline_orange_200_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="新密码"
                android:textColorHint="#40000000"
                android:background="@null"
                android:id="@+id/et_changepassword_newpwd1"
                android:singleLine="true"
                android:inputType="textPassword"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l2"
        android:id="@+id/v_login_v3"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/v_login_v3"
        android:orientation="horizontal"
        android:id="@+id/lo_login_l3"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_lock_outline_orange_200_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="确认新密码"
                android:textColorHint="#40000000"
                android:background="@null"
                android:id="@+id/et_changepassword_newpwd2"
                android:singleLine="true"
                android:inputType="textPassword"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l3"
        android:id="@+id/v_login_v4"/>
    <com.dd.CircularProgressButton
        android:id="@+id/btn_changepassword_confirmchange"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cpb_textComplete="修改成功"
        app:cpb_textError="修改失败，请重试"
        app:cpb_textIdle="确认修改"
        android:layout_alignParentBottom="true"
        app:cpb_cornerRadius="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cpb_colorProgress="#00ffffff"
        />
</RelativeLayout>
